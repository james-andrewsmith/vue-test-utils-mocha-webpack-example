{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": ["dom", "es5", "es2015.promise"],
		// "allowJs": true,
		"outDir": "./built/",
		"sourceMap": true,
		"allowJs": true,
		"traceResolution": true,
		"noImplicitAny": false,
		"baseUrl": "./",
		"module": "esnext",
		"moduleResolution": "node",
		"paths": {
			"shared/*": ["shared/*"],
			"components/*": ["src/components/*"]
		},
		"rootDirs": ["./src"]
	}
}
